<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.VBox"
         HBox.hgrow="ALWAYS"
         alignment="TOP_CENTER"
         spacing="16">
    <VBox>
        <HBox alignment="TOP_RIGHT" fx:id="text" spacing="32" style="-fx-padding: 0 80 0 0;">
            <Text fx:id="title" style="-fx-font-size: 24;" fill="#424242" />
        </HBox>
        <HBox alignment="TOP_RIGHT" fx:id="container" spacing="64" style="-fx-padding: 0 32 0 0;"/>
        <HBox alignment="CENTER" fx:id="messageSpace" style="-fx-padding: 0 160 0 0; -fx-background-color: yellow"/>
    </VBox>
</fx:root>
