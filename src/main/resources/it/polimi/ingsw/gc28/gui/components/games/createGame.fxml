<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.Pane">

    <VBox fx:id="createGameBox" prefHeight="256.0"  alignment="CENTER">
        <HBox alignment="CENTER" AnchorPane.leftAnchor="550.0">
            <Label style="-fx-padding: 0 0 8 0" text="Number of players" />
        </HBox>
        <HBox alignment="CENTER" spacing="64" style="-fx-padding: 32 0 0 0">
            <Button fx:id="TwoPlayersButton" minHeight="64" minWidth="200" style="-fx-background-color: #EDEDED;-fx-background-radius: 16;"
                    onMouseClicked="#handleSelectTwoPlayers">
                <graphic>
                    <HBox alignment="CENTER">
                        <Text text="2" />
                    </HBox>
                </graphic>
            </Button>
            <Button fx:id="ThreePlayersButton" minHeight="64" minWidth="200" style="-fx-background-color: #EDEDED;-fx-background-radius: 16;"
                    onMouseClicked="#handleSelectThreePlayers">
                <graphic>
                    <HBox alignment="CENTER">
                        <Text text="3" />
                    </HBox>
                </graphic>
            </Button>
            <Button fx:id="FourPlayersButton" minHeight="64" minWidth="200" style="-fx-background-color: #EDEDED;-fx-background-radius: 16;"
                    onMouseClicked="#handleSelectFourPlayers">
                <graphic>
                    <HBox alignment="CENTER">
                        <Text text="4" />
                    </HBox>
                </graphic>
            </Button>
        </HBox>
        <Region>
            <minHeight>150.0</minHeight>
        </Region>
        <Button fx:id="createButton" prefHeight="64.0" prefWidth="322.0" style="-fx-background-color: transparent;-fx-font-size: 24pt; -fx-font-weight: bold" text="CREATE" layoutX="300" layoutY="300"
                onMouseClicked="#handleCreateButton">
        </Button>
    </VBox>
</fx:root>
