<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.effect.GaussianBlur?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.ingsw.gc28.view.gui.controllers.LobbyController"
            prefHeight="400.0" prefWidth="600.0">

    <ImageView fx:id="backgroundImageView" preserveRatio="true">
        <effect>
            <GaussianBlur radius="8"/> <!-- Adjust the blur radius as needed -->
        </effect>
        <Image url="@../img/background5.png"/>
    </ImageView>
    <HBox AnchorPane.leftAnchor="32" AnchorPane.topAnchor="32" alignment="CENTER">
        <VBox onMouseClicked="#onBackArrowClicked">
            <ImageView   fitWidth="48" fitHeight="48">
                <Image url="@../img/backarrow.png" />
            </ImageView>
        </VBox>
        <Label  text="Lobby" style="-fx-font-size: 36"/>
    </HBox>
    <VBox AnchorPane.topAnchor="120" AnchorPane.leftAnchor="64" AnchorPane.rightAnchor="64">
        <Label text="Username" style="-fx-padding: 0 0 8 0"/>
        <TextField  fx:id="usernameTextField" promptText="Tell me your beautiful name..." minHeight="48" style="-fx-background-color: #EDEDED;-fx-background-radius: 16;-fx-prompt-text-fill: derive(-fx-control-inner-background,-30%);" />
        <HBox spacing="64" alignment="CENTER" style="-fx-padding: 32 0 0 0">
            <Button fx:id="createGameButton" onMouseClicked="#handleSelectCreateGame" style="-fx-background-color: #EDEDED;-fx-background-radius: 16;" minWidth="300" minHeight="64">
                <graphic>
                    <HBox alignment="CENTER" >
                        <Text text="CREATE GAME"/>
                    </HBox>
                </graphic>
            </Button>
            <Button fx:id="joinGameButton" onMouseClicked="#handleSelectJoinGame" style="-fx-background-color: #EDEDED;-fx-background-radius: 16;" minWidth="300" minHeight="64">
                <graphic>
                    <HBox alignment="CENTER" >
                        <Text text="JOIN GAME"/>
                    </HBox>
                </graphic>
            </Button>
        </HBox>
        <Region minHeight="50"/> <!-- Aggiunge uno spazio di 50 pixel -->
        <Label text="Number of players" style="-fx-padding: 0 0 8 0"/>
        <ChoiceBox>
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="2" />
                    <String fx:value="3" />
                    <String fx:value="4" />
                </FXCollections>
            </items>
        </ChoiceBox>
    </VBox>
</AnchorPane>
